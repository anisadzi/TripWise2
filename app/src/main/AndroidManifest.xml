<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Indicate that the app can use the camera, but it's not required -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <!-- Permissions required by the app -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Allows reading from external storage -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <!-- Allows writing to external storage -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <!-- Allows using the camera -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- Allows access to notification policy -->
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />
    <!-- Allows posting notifications -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- Allows the app to prevent the phone from sleeping -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Application-specific configurations -->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TripWise"
        tools:targetApi="31">

        <!-- Activity declarations -->
        <activity
            android:name=".Activity.view.expense.ExpenseListActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.view.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.view.itinerary.EditItineraryTrackingActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.view.itinerary.AddItineraryTrackingActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.view.itinerary.ItineraryTrackingActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.view.expense.ExpenseTrackingActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.view.budget.BudgetActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.view.profile.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.view.profile.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.view.auth.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.view.auth.AuthActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".Activity.view.MainActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.view.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <!-- Declare this activity as the main entry point -->
                <action android:name="android.intent.action.MAIN" />
                <!-- Category to define it as a launcher activity -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Firebase Messaging Service declaration -->
        <service
            android:name=".Activity.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <!-- Intent filter for Firebase messaging events -->
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>
</manifest>
