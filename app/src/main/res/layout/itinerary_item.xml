<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tvStartEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="startTime - endTime"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/rounded_fill"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvNameTrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name trip"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:paddingBottom="7dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_loc_outline"/>
            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="trip location"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tvEdit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Edit"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:layout_marginStart="10dp"
        android:textColor="#00FF04"/>
    <TextView
        android:id="@+id/tvDelete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Delete"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="#FF0000"/>

</LinearLayout>